# Kubernetes Metrics Server Reverse Proxy Configuration
# {{ ansible_managed }}

upstream k8s_metrics_backend {
    server 127.0.0.1:10250;
    keepalive 32;
}

{% if k8s_control_ssl_enabled | default(false) %}
# HTTP to HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name {{ k8s_metrics_domain }};

    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ k8s_metrics_domain }};

    # SSL Configuration
    ssl_certificate /etc/nginx/ssl/{{ k8s_metrics_domain }}.crt;
    ssl_certificate_key /etc/nginx/ssl/{{ k8s_metrics_domain }}.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security Headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;

{% else %}
# HTTP only (SSL disabled)
server {
    listen 80;
    listen [::]:80;
    server_name {{ k8s_metrics_domain | default('k8s-metrics.local') }};
{% endif %}

    # Logging
    access_log /var/log/nginx/k8s-metrics-access.log;
    error_log /var/log/nginx/k8s-metrics-error.log;

    # Proxy settings for Kubernetes Metrics
    location / {
        proxy_pass https://k8s_metrics_backend;
        proxy_ssl_verify off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # HTTP/1.1
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffer settings
        proxy_buffering off;
    }
}
