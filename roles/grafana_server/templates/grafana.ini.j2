[server]
protocol = http
http_addr = 0.0.0.0
http_port = 3000
domain = {{ grafana_domain | default('localhost') }}
root_url = {{ 'https://' if observability_ssl_enabled else 'http://' }}{{ grafana_domain | default(ansible_host + ':3000') }}

[security]
admin_user = {{ grafana_admin_user | default('admin') }}
admin_password = {{ grafana_admin_password | default('admin') }}

[users]
allow_sign_up = false
default_theme = dark

[auth.anonymous]
enabled = false

[log]
mode = console
level = info

[paths]
data = /var/lib/grafana
logs = /var/log/grafana
plugins = /var/lib/grafana/plugins
provisioning = /etc/grafana/provisioning
