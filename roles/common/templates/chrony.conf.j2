# =============================================================================
# Chrony NTP 配置文件 | Chrony NTP Configuration
# =============================================================================
# 由 Ansible 自动生成 | Generated by Ansible
# 用于配置系统时间同步 | Used for system time synchronization
# =============================================================================

# 公共 NTP 服务器列表 | Public NTP servers list
{% for server in ntp_servers %}
server {{ server }} iburst
{% endfor %}

# 记录系统时钟增益/损失速率 | Record the rate at which the system clock gains/losses time
driftfile /var/lib/chrony/drift

# 允许在前三次更新中调整系统时钟 | Allow the system clock to be stepped in the first three updates
makestep 1.0 3

# 启用实时时钟（RTC）的内核同步 | Enable kernel synchronization of the real-time clock (RTC)
rtcsync

# 指定日志文件目录 | Specify directory for log files
logdir /var/log/chrony
