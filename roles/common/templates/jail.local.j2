# Fail2Ban configuration
# Generated by Ansible

[DEFAULT]
bantime = {{ security.fail2ban_ban_time | default(3600) }}
findtime = 600
maxretry = {{ security.fail2ban_max_retry | default(5) }}
backend = systemd
destemail = root@localhost
sendername = Fail2Ban
action = %(action_)s

[sshd]
enabled = true
port = {{ ssh_port }}
logpath = /var/log/auth.log
maxretry = {{ security.fail2ban_max_retry | default(5) }}
